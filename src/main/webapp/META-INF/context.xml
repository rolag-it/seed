<Context path="/seed" debug="99" reloadable="true" antiJARLocking="true" antiResourceLocking="false">
     <Resource name="jdbc/seed" auth="Container" type="javax.sql.DataSource"
              maxActive="20" maxIdle="3" maxWait="10000"
              driverClassName="${jdbc.driverClassName}"
              username="${jdbc.username}" password="${jdbc.password}"
              url="${jdbc.url}"
              defaultAutoCommit="true" removeAbandoned="true"
              removeAbandonedTimeout="1" logAbandoned="true"
			  validationQuery="SELECT 1 FROM dual" testOnBorrow="true"/>
</Context>